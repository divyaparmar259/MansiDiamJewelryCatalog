<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JewelryCatalog</title>

    <!-- Inline fallback styling since site.css gives 404 -->
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9f8;
            color: #1a3c2c;
        }

        h2, h3, h4 {
            color: #14532d;
        }

        header {
            background-color: #14532d !important;
            color: white;
        }

        footer {
            background-color: #1a3c2c;
            color: #e6f2e9;
        }

        .card {
            background: white;
            border-left: 5px solid #1a3c2c;
            border-radius: 10px;
        }

        .btn-green {
            background-color: #198754;
            color: white;
            border: none;
        }

        .btn-green:hover {
            background-color: #146c43;
            color: white;
        }

        .btn-outline-green {
            border: 2px solid #198754;
            color: #198754;
            background: none;
        }

        .btn-outline-green:hover {
            background-color: #198754;
            color: white;
        }
    </style>
</head>

<body class="bg-light">
    <header class="py-3 mb-4 shadow">
        <div class="container d-flex align-items-center justify-content-between">
            <h1 class="h4 mb-0 text-white"><i class="fas fa-leaf me-2"></i> Mansi Lab-Grown Diamond Jewelry</h1>
         
        </div>
    </header>

    <main role="main" class="container">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </main>
</body>
</html>
