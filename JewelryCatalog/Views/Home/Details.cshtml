@model JewelryCatalog.Models.JewelryProduct

<div class="card shadow-lg border-0 mb-5 p-4">
    <h3 class="text-center mb-4"><i class="fas fa-diamond"></i> Jewelry Details</h3>
    <div class="row">
        <div class="col-md-6">
            <p><strong>🔢 Serial Number:</strong> @Model.SerialNumber</p>
            <p><strong>💍 Product Title:</strong> @Model.ProductTitle</p>
            <p><strong>🏷️ Gold Type:</strong> @Model.GoldType</p>
            <p><strong>⚖️ Gross Weight:</strong> @Model.GWT g</p>
            <p><strong>🧪 Net Weight:</strong> @Model.NWT g</p>
        </div>
        <div class="col-md-6">
            <p><strong>💎 Soliter Diamonds:</strong> @Model.SoliterDiamond</p>
            <p><strong>🔹 Small Diamonds:</strong> @Model.SmallDiamond</p>
            <p><strong>🛠️ Labour:</strong> ₹@Model.Labour</p>
            <p><strong>📦 Require:</strong> ₹@Model.RequireData</p>
            <p class="fs-5 fw-bold text-success"><i class="fas fa-money-bill-wave"></i> Total Amount: ₹@Model.TotalAmount</p>
        </div>
    </div>
    <a href="/" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Back</a>
</div>
